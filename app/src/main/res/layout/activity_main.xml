<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <!-- Text view for result view-->
    <TextView
        android:id="@+id/textView_answer"
        android:layout_width="200dp"
        android:layout_height="101dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="300dp"
        android:text="@string/_0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--take the input first number-->
    <EditText
        android:id="@+id/editText_first_no"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="40dp"
        android:importantForAutofill="no"
        android:inputType="number"
        tools:ignore="LabelFor,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />
    <!-- for message input first number-->
    <TextView
        android:id="@+id/textView_first_no"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:text="@string/first_number"
        android:textSize="20sp" />

    <!--view message -->
    <TextView
        android:id="@+id/textView_second_no"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:text="@string/second_number"
        android:textSize="20sp" />

    <!-- take input for second number -->

    <EditText
        android:id="@+id/editText_second_no"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="90dp"
        android:importantForAutofill="no"
        android:inputType="number"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <!-- button for run add logic and view result -->

    <Button
        android:id="@+id/add_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="200dp"
        android:text="@string/add" />

</RelativeLayout>